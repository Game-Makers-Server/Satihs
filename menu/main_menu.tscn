script/source = "extends Node2D

@onready var select_arrow = $Control/NinePatchRect/RichTextLabel
# we will make menu_options a variable for now, for more modularity.
# for the final release we will make this a specific number for less memory utilization.
@onready var menu_options = $Control/NinePatchRect/VBoxContainer
@onready var main_menu = self
@onready var equip_menu = get_parent().get_node(\"equip\")

var selected = 0

# these variables can also be hard coded for less memory usage in the final.
var option_margin = 27
var top_margin = 8

func _ready():
	main_menu.visible = false

func _unhandled_input(event):
	if main_menu.visible and event.is_action_pressed(\"ui_up\"):
		selected -= 1
	if main_menu.visible and event.is_action_pressed(\"ui_down\"):
		selected += 1
		
	menu_select_handler();

func menu_select_handler():
	if selected < 0:
		selected = menu_options.get_child_count()-1 
	if selected > menu_options.get_child_count()-1:
		selected = 0

	select_arrow.position.y = top_margin + (selected) * option_margin
"

